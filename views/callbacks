    callbackTermino('termin√≥');
	}
 
	function paso1(quePaso){
     alert(quePaso);
	}
 
	function paso2(quePaso){
     alert(quePaso);
	}
 
	function termino(queHizo){
     alert(queHizo);
	}
	
